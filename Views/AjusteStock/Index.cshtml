@model IEnumerable<SistemaGestionVentas.Models.AjusteStock>

@{
  ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Fecha)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.TipoMovimiento)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Nota)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Usuario)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Venta)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.MotivoAjuste)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.TipoMovimiento)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Nota)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Usuario.Apellido)
        </td>
        <td>
          @if (item.Venta != null)
          {
            @item.Venta.Id
          }
          else
          {
            <span>N/A</span>
          }
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.MotivoAjuste.Nombre)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>