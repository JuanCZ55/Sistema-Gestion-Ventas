@* Views/Producto/_CreateModal.cshtml *@
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createModalLabel">Crear Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>
      <form id="createForm" enctype="multipart/form-data" action="/Producto/Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div class="modal-body row">
          <div class="col">
            <div class="form-group">
              <label for="create_Codigo">Código</label>
              <input type="text" class="form-control" id="create_Codigo" name="Codigo" required />
            </div>
            <div class="form-group">
              <label for="create_Nombre">Nombre</label>
              <input type="text" class="form-control" id="create_Nombre" name="Nombre" required />
            </div>
          <div class="row">

            <div class="form-group col">
              <label for="create_PrecioCosto">Precio Costo</label>
              <input type="number" step="0.01" class="form-control" id="create_PrecioCosto" name="PrecioCosto"
                required />
            </div>
            <div class="form-group col">
              <label for="create_PrecioVenta">Precio Venta</label>
              <input type="number" step="0.01" class="form-control" id="create_PrecioVenta" name="PrecioVenta"
                required />
            </div>
            </div>
            <div class="form-group">
              <label for="create_Stock">Stock</label>
              <input type="number" step="0.001" class="form-control" id="create_Stock" name="Stock" required />
            </div>
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="create_Pesable" name="Pesable" />
              <label class="form-check-label" for="create_Pesable">Pesable</label>
            </div>
            <div class="form-group">
              <label for="create_CategoriaId">Categoría</label>
              @Html.DropDownList("CategoriaId", ViewBag.CategoriaId as SelectList, "Seleccione...", new { @class =
              "form-control", id = "create_CategoriaId", name = "CategoriaId", required = "required" })
            </div>
            <div class="form-group">
              <label for="create_ProveedorId">Proveedor</label>
              @Html.DropDownList("ProveedorId", ViewBag.ProveedorId as SelectList, "Seleccione...", new { @class =
                            "form-control", id = "create_ProveedorId", name = "ProveedorId" })
            </div>
          </div>  
          <div class="col">
            <div class="form-group">
              <label for="create_imageInput">Imagen</label>
              <input type="file" class="form-control image-input" id="create_imageInput" name="Fimagen" accept="image/*" />
              <div id="create_preview" class="mt-3"></div>
              <input type="hidden" id="create_BorrarImagen" name="BorrarImagen" value="false" />
            </div>
            
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Crear</button>
        </div>
      </form>
    </div>
  </div>
</div>