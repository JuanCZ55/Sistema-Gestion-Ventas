@* Views/Producto/_EditModal.cshtml *@
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Editar Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>
      <form id="editForm" enctype="multipart/form-data" action="/Producto/Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" id="edit_Id" name="Id" />
        <div class="modal-body row">
          <div class="col">

          <div class="form-group">
            <label for="edit_Codigo">Código</label>
            <input type="text" class="form-control" id="edit_Codigo" name="Codigo" required />
          </div>
          <div class="form-group">
            <label for="edit_Nombre">Nombre</label>
            <input type="text" class="form-control" id="edit_Nombre" name="Nombre" required />
          </div>
          <div class="row">
          <div class="form-group col">
            <label for="edit_PrecioCosto">Precio Costo</label>
            <input type="number" step="0.01" class="form-control" id="edit_PrecioCosto" name="PrecioCosto" required />
          </div>
          <div class="form-group col">
            <label for="edit_PrecioVenta">Precio Venta</label>
            <input type="number" step="0.01" class="form-control" id="edit_PrecioVenta" name="PrecioVenta" required />
          </div>
          </div>
          <div class="form-group">
            <label for="edit_Stock">Stock</label>
            <input type="number" step="0.001" class="form-control" id="edit_Stock" name="Stock" required />
          </div>
          <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="edit_Pesable" name="Pesable" />
            <label class="form-check-label" for="edit_Pesable">Pesable</label>
          </div>
          
          <div class="form-group">
            <label for="edit_CategoriaId">Categoría</label>
            @Html.DropDownList("CategoriaId", ViewBag.CategoriaId as SelectList, "Seleccione...", new { @class =
            "form-control", id = "edit_CategoriaId", name = "CategoriaId", required = "required" })
          </div>
          <div class="form-group">
            <label for="edit_ProveedorId">Proveedor</label>
            @Html.DropDownList("ProveedorId", ViewBag.ProveedorId as SelectList, "Seleccione...", new { @class =
                        "form-control", id = "edit_ProveedorId", name = "ProveedorId" })
          </div>
          </div>
          <div class="col">
          <div class="form-group">
            <label for="edit_imageInput">Nueva Imagen</label>
            <input type="file" class="form-control image-input" id="edit_imageInput" name="Fimagen" accept="image/*" />
            <div id="edit_preview" class="mt-3"></div>
            <div class="form-check mt-2 d-none">
              <input  class="form-check-input" id="edit_BorrarImagen" name="BorrarImagen" value="true" />
              <label class="form-check-label hidden" for="edit_BorrarImagen">Borrar imagen actual</label>
            </div>
          </div>
</div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>