@* Views/Usuario/_CreateModal.cshtml *@
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createModalLabel">Crear Usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="createForm" enctype="multipart/form-data" action="/Usuario/Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div class="modal-body row">
          <div class="col-md-6">
            <div class="row">
              <div class="form-group col-md-6">
                <label for="create_DNI">DNI</label>
                <input type="text" class="form-control" id="create_DNI" name="DNI" required pattern="\d{7,8}"
                  title="Debe tener 7 u 8 dígitos numéricos" />
              </div>
              <div class="form-group col-md-6">
                <label for="create_Rol">Rol</label>
                <select class="form-control" id="create_Rol" name="Rol" required>
                  <option value="">Seleccione...</option>
                  <option value="1">Administrador</option>
                  <option value="2">Empleado</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <label for="create_Nombre">Nombre</label>
                <input type="text" class="form-control" id="create_Nombre" name="Nombre" required />
              </div>
              <div class="form-group col-md-6">
                <label for="create_Apellido">Apellido</label>
                <input type="text" class="form-control" id="create_Apellido" name="Apellido" required />
              </div>
            </div>
            <div class="form-group">
              <label for="create_Email">Email</label>
              <input type="email" class="form-control" id="create_Email" name="Email" required />
            </div>
            <div class="form-group">
              <label for="create_Pass">Contraseña</label>
              <input type="password" class="form-control" id="create_Pass" name="Pass" required />
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="create_imageInput">Avatar</label>
              @* ID="create_imageInput" para JS | Name="Favatar" para C# *@
              <input type="file" class="form-control image-input" id="create_imageInput" name="Favatar"
                accept="image/*" />
              <div id="create_preview" class="mt-3"></div>

              @* ID="create_BorrarImagen" para JS | Name="BorrarAvatar" para C# *@
              <input type="hidden" id="create_BorrarImagen" name="BorrarAvatar" value="false" />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Crear</button>
        </div>
      </form>
    </div>
  </div>
</div>