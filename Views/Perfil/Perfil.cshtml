@model SistemaGestionVentas.Models.Usuario
@{
  ViewData["Title"] = "Editar Perfil";
}

<div class="container ">
  <form asp-action="Perfil" method="post" enctype="multipart/form-data" autocomplete="off" novalidate>
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">
        <div class="card shadow">

          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label asp-for="DNI" class="form-label">DNI</label>
                  <input asp-for="DNI" class="form-control" />
                  <span asp-validation-for="DNI" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                  <label asp-for="Nombre" class="form-label">Nombre</label>
                  <input asp-for="Nombre" class="form-control" />
                  <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                  <label asp-for="Apellido" class="form-label">Apellido</label>
                  <input asp-for="Apellido" class="form-control" />
                  <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                  <label asp-for="Email" class="form-label">Email</label>
                  <input asp-for="Email" class="form-control" />
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>


              </div>

              <!-- Columna derecha: Avatar -->
              <div class="col-md-6">
                <div class="form-group">
                  <label for="edit_imageInput" class="form-label">Avatar</label>
                  <input type="file" class="form-control image-input" id="edit_imageInput" name="Favatar"
                         accept="image/*" />
                  <div id="edit_preview" class="mt-3"></div>

                  @* ID="edit_BorrarImagen" para JS | Name="BorrarAvatar" para C# *@
                  <div class="form-check mt-2 d-none">
                    <input class="form-check-input" id="edit_BorrarImagen" name="BorrarAvatar" value="false" />
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group  col">
                <label asp-for="Pass" class="form-label">Nueva contraseña</label>
                <input asp-for="Pass" class="form-control" type="password" autocomplete="new-password"
                       placeholder="Dejar vacía para mantener la actual" />
                <span asp-validation-for="Pass" class="text-danger"></span>
              </div>
              <div class="form-group  col">
                <label class="form-label">Contraseña actual</label>
                <input name="PassActual" class="form-control" type="password" autocomplete="current-password" />
              </div>
            </div>
          </div>
          <div class="card-footer bg-light d-flex justify-content-between gap-2">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
@section Scripts {
  <script src="~/js/image-uploader.js"></script>
  <script>
                              document.addEventListener('DOMContentLoaded', function () {
                                @if (!string.IsNullOrEmpty(Model.Avatar))
                                {
                                                            <text>setEditImage('@Model.Avatar', 'edit');</text>
                                }
                                initImageUploader('edit');
                              });
  </script>
  @await Html.PartialAsync("_ValidationScriptsPartial")
}